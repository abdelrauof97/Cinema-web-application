
<% if flash.has?(:message) %>
  <h5><%= flash[:message] %></h5>
<% end %>
<br></br>
<% if @customer.username == "admin" %>
  <h1>Create a New Movie <a href="/movies/new">Create</a></h1>
  <br></br>
<% end %>
<% @movies.each do |movie| %>
    <h4><a href="/movies/<%= movie.id %>">Movie</a>: <%= movie.title %></h4>

  <h5>Description: </h5><h6><%= movie.description %></h6>
  <% if @customer.username == "admin" %>
    <br>
    <a href="/movies/<%= movie.id %>/edit">Edit Description</a>
    <br> </br>
    <form method="post" action="/movies/<%= movie.id %>/delete">
      <input type="hidden"  name="_method" id="hidden" value="delete" >
      <input type="submit" value="Delete Movie">
    </form>
    
  <% else %>
    <form method="post" action="/movies/<%= @customer.id %>/resrvation/<%= movie.id %>">
      <input type="submit" value="Resrve a Ticket, Price: 25$">
    </form>
  <% end %>
  <br>
  <p>------------------------</p>
<% end %>